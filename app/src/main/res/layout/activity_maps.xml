<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goToMarker">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mobileappscompany.training.mymapsapp.MapsActivity" />

    <Button
        android:text="Go to marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToMarker"/>

    <Button
        android:text="Go to a location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:onClick="goToLocation"/>

    <Button
        android:text="Go to current location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:onClick="goToCurrent"/>

    <Button
        android:text="Go to current location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="showMapTypeSelectorDialog"/>

</FrameLayout>
